<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	">
	<!-- 作为消费者所调用的接口配置 -->
	<!-- 使用DUBBO multicast广播点对点直连配置的接口配置文件，在开发时候使用 -->
	<!-- 示例如下，配置多个url，url的前面为直连的子系统的IP和DUBBO端口，在dubbo.properties已经配置了各子系统的URL，直接引用即可 -->
	<dubbo:consumer check="false" />

	<!--系统参数框架中转接口 -->
	<!-- <dubbo:reference id="sysParamTransferFacade" -->
	<!-- interface="com.midea.ccss.common.api.facade.SysParamTransferFacade" -->
	<!-- url="${dubbo.url.sys}/com.midea.ccss.common.api.facade.SysParamTransferFacade" 
		/> -->

	<!--权限操作远程服务 -->
	<dubbo:reference id="authOptionsFacade"
		interface="com.neusoft.cs.permission.api.facade.AuthOptionsFacade"
		url="${dubbo.url.permission}/com.neusoft.cs.permission.api.facade.AuthOptionsFacade" />

	<!-- 权限注入 -->
	<dubbo:reference id="permissionInterceptorFacade"
		interface="com.neusoft.cs.pub.api.facade.PermissionInterceptorFacade"
		timeout="5000"
		url="${dubbo.url.permission}/com.neusoft.cs.pub.api.facade.PermissionInterceptorFacade" />

	<!-- 自动生成编码注入 -->
	<dubbo:reference id="cssCodeRuleFacade"
		interface="com.neusoft.cs.framework.rpc.api.facade.CssCodeRuleFacade"
		timeout="5000"
		url="${dubbo.url.sys}/com.neusoft.cs.framework.rpc.api.facade.CssCodeRuleFacade" />
</beans>
